<p id=“notice”><%= notice %></p>
<table>
<caption>
<h1>Books<h1>
<thead>
<tr><th>Title</th><th>Body</th></tr>
</thead>
<tbody>
  <% @books.each do |book| %>
    <tr>
        <th>
          <%=  book.title %></th><td><%= book.body %></td>
      <td>
        <%= link_to "show", book_path(book) %>
        <%= link_to "Edit", edit_book_path(book) %>
        <%= link_to "Destroy", book_path(book), method: :delete %>
      </td>
    </tr>
  <% end %>
</tbody>
</table>




<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: @book,url: books_path, local:true do |f| %>
  <% if @book.errors.any? %>
      <%= @book.errors.count %>件のerror
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
  <% end %>

 <h4>Title</h4>
 <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_field :body %>



  <%= f.submit 'Create Book' %>

 
<% end %>











<body>

    <h1>Editing Book</h1>
<%= form_with model:@book, local: true do |f| %>
 <% if @book.errors.any? %>
      <%= @book.errors.count %>件のerror
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
  <% end %>

      <div class="field">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>

      </div>

      <div class="field">
        <label for="book_body">Body</label>
        <%= f.text_area :body %>

      </div>

      <div class="actions">

         <%= f.submit 'Update Book' %>
      </div>
    </form>

     <%= link_to "show", book_path(@book) %>
    <a class="back" href="/books">Back</a>
<% end %>


</body>